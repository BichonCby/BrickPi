CC=g++

test: test.o BrickPi3.o Sensors.o MotorsBS.o
	$(CC) -o test test.o BrickPi3.o Sensors.o MotorsBS.o
	
test.o: test.c
	$(CC) -o test.o -c test.c -O
	
BrickPi3.o: BrickPi3.cpp
	$(CC) -o BrickPi3.o -c BrickPi3.cpp -O

Sensors.o: Sensors.cpp
	$(CC) -o Sensors.o -c Sensors.cpp -O

Motors.o: MotorsBS.cpp
	$(CC) -o MotorsBS.o -c MotorsBS.cpp -O
clean :
	rm *.o
